{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "Node16",                      
    "rootDir": "./src",                         
    "outDir": "./dist",                         
    "strict": true,                             
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,                       
    "sourceMap": true,                          
    "moduleResolution": "node16",
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ]
}
